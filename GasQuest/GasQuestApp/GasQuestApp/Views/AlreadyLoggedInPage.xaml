<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GasQuestApp.Views.AlreadyLoggedInPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Logging You In..."
                   FontSize="35"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   x:Name="loginLabel"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"/>
            <Frame HeightRequest="145"
                   WidthRequest="145"
                   IsClippedToBounds="False"
                   HasShadow="False"
                   TranslationY="-200">

                <Image Source="GasQuestLogo.png"
                       Aspect="AspectFit">
                </Image>
            </Frame>
            <ProgressBar x:Name="progressBar" ProgressColor="{StaticResource Primary }"
                         Progress="0.0"
                         VerticalOptions="Center"
                         ScaleY="7"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>